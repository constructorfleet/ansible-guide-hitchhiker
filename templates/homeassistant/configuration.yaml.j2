homeassistant:
    name: "{{ hitchhiker_config.name }}"
    customize: !include customization.yaml
    latitude: "{{ hitchhiker_config.gps.latitude | default(omit) }}"
    longitude: "{{ hitchhiker_config.gps.longitude | default(omit) }}"
    altitude: "{{ hitchhiker_config.gps.altitude | default(omit) }}"
    unit_system: "{{ hitchhiker_config.localization.unit_system | default('Imperial') }}"
    temperature_unit: "{{ hitchhiker_config.localization.temperature_unit | default('F') }}"
    time_zone: "{{ hitchhiker_config.timezone | default(omit) }}"
    external_url: "{{ hitchhiker_config.url.external | default(omit) }}"
    internal_url: "{{ hitchhiker_config.url.internal | default(omit) }}"
    allowlist_external_dirs: "{{ hitchhiker_config.storage.public | default(omit) }}"

logger:
  default: '{{ default_log_level | default("DEBUG") }}'
  logs: '{{ component_log_levels is defined | ternary(component_log_levels, omit) }}'

api:

frontend:

lovelace:

http:

{% if integration_configration is defined %}
{{ integration_configuration }}
{% endif %}
